<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.ManagePageActivity">

    <!-- LinearLayout to group the information cards -->

    <!-- Task bar with icons -->

    <ImageView
        android:id="@+id/dashboardIcon"
        android:layout_width="181dp"
        android:layout_height="83dp"
        android:src="@drawable/ic_dashboard"
        app:layout_constraintBottom_toTopOf="@id/linearLayoutCounts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutCounts"
        android:layout_width="412dp"
        android:layout_height="580dp"
        android:layout_marginTop="88dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Active Projects count -->
        <TextView
            android:id="@+id/tvActiveProjectsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/light_blue"
            android:gravity="center"
            android:text="Active Projects: 23\n1 New in last 7 days"
            android:textSize="32sp"
            tools:ignore="TextContrastCheck" />

        <!-- Overdue count -->
        <TextView
            android:id="@+id/tvOverdueCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/light_green"
            android:gravity="center"
            android:text="Overdue: 12\n7 New in last 7 days"
            android:textSize="32sp" />

        <!-- Pending count -->
        <TextView
            android:id="@+id/tvPendingCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/light_red"
            android:gravity="center"
            android:text="Pending: 35\n5 New in last 7 days"
            android:textSize="32sp"
            tools:ignore="TextContrastCheck" />

        <!-- Meetings count -->
        <TextView
            android:id="@+id/tvMeetingsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/light_yellow"
            android:gravity="center"
            android:text="Meetings: None\nNo new Meetings"
            android:textSize="32sp" />
    </LinearLayout>


    <include
        android:id="@+id/footerManageLayout"
        layout="@layout/footer_manage_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
